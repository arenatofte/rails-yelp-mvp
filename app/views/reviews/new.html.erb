  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2>Create a new review</h2>
      <%= form_with @review do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
